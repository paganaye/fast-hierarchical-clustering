{
    // We have a single launch commands here
    // It can be used both to debug either
    //    - a TS file
    //    - a JS file
    //    - a Mocha test (from the test folder)
    // Open any file and press F5
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "pwa-chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
    }     
    ]
}