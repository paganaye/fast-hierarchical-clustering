{
    // We have two launch commands here
    //
    // The first: "Debug current Test file" is for Mocha test 
    // The second: "Debug current Typescript file" is specifically for 
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug current Test file",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${relativeFile}",
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "name": "Debug current Typescript file",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "--require",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_IGNORE": "false",
                "TS_NODE_PROJECT": "tsconfig.json"
            }
        }
    ]
}